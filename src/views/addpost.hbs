<div class="container jumbotron bg-secondary">

    <div class="col">
        <div class="container jumbotron" .>
            <h1>Create a New Post</h1>
            <form action="/addpost" method="post" class="form-group">
                <div class="form-group">
                    <input type="text" name="id" placeholder="writer id" class="form-control">
                </div>
                <div class="form-group">
                    <input type="text" name="title" placeholder="title" class="form-control">
                </div>
                <div class="form-group">
                    <textarea name="desc" rows="5" class="form-control" placeholder="Description"></textarea>
                </div>
                <input class="btn btn-primary" type="submit" value="Submit">
                <a class="btn btn-danger" href="/posts">Cancel</a>
            </form>
        </div>

    </div>
</div>